<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView_detailProduct"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:padding="5dp"
            android:id="@+id/imHinhGioHang"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:src="@drawable/backgroundplashscreen"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:id="@+id/txtTenSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ten San Pham"/>
                <TextView
                    android:padding="5dp"
                    android:id="@+id/txtGiaSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#e1060a"
                    android:textAlignment="center"
                    android:text="Gia San Pham"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/imRemove"
                        android:padding="5dp"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="0"
                        android:id="@+id/txtSoLuong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/imAdd"
                        android:padding="5dp"
                        android:background="@color/colorWhite"
                        android:src="@drawable/ic_add_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/imXoaSP"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>