<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundplashscreen"
    tools:context="com.example.truanggg.lazada.View.SlashViewActivity">
    <!--"#66000000" How to make a background 20% transparent on Android-->
    <!--android:textAlignment="center" căn đoạn text ra giữa-->
    <LinearLayout
        android:background="#66000000"
        android:orientation="vertical"
        android:paddingRight="100dp"
        android:paddingLeft="100dp"
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/iconbag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="Thế Giới Mưa Sắm Trong Tầm Tay Bạn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/iconmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="Giao Hàng Tận Nơi + Thanh Toán Dễ Dàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:paddingTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/iconsercurity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="100% Bảo Vệ Người Tiêu Dùng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_gravity="bottom|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lazadacustomerlogo"/>

</FrameLayout>
