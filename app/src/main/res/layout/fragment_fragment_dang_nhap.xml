<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.example.truanggg.lazada.View.DangNhap_DangKy.Fragment.FragmentDangNhap">
    <!--khi mình đăng nhập sai thì sẽ báo lỗi ở dưới EditText-->
   <android.support.design.widget.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp">
       <com.example.truanggg.lazada.CustomView.ClearEditText
           android:id="@+id/edtDiaChiEmailDangNhap"
           android:textColor="#000000"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Địa Chỉ Email"/>
   </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.truanggg.lazada.CustomView.PasswordEditText
            android:id="@+id/edtMatKhauDangNhap"
            app:useStrike="true"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật Khẩu"/>
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/txtQuenMatKhau"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:gravity="right"
        android:text="Quên Mật Khẩu??"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnDangNhap"
        android:textColor="@color/colorWhite"
        android:background="@color/bgLogo"
        android:layout_margin="10dp"
        android:text="Đăng Nhập"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoặc Đăng Nhập Bằng"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnDangNhapFB"
            android:textColor="@color/colorFB"
            android:background="@drawable/vienfacebook"
            android:layout_weight="1"
            android:drawableLeft="@drawable/facebookiconsmall"
            android:text="FaceBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnDangNhapGG"
            android:background="@drawable/viengoogle"
            android:textColor="@color/colorGG"
            android:layout_weight="1"
            android:drawableLeft="@drawable/googleplussmall"
            android:text="Google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
